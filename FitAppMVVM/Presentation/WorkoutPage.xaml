<Page
    x:Class="FitAppMVVM.Presentation.WorkoutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FitAppMVVM.Presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Black">

    <Grid Padding="24">

        <!-- Page Title -->
        <TextBlock Text="NEW WORKOUT"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#A26BFF"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,32"/>

        <!-- Form -->
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="16"
                    Width="300">

            <TextBox x:Name="TextBoxName"
                     Text="{Binding Name, Mode=TwoWay}"
                     PlaceholderText="Enter the name:"
                     Background="#1E1E1E"
                     Foreground="White"
                     BorderBrush="#7A00CC"
                     CornerRadius="10"
                     Padding="12"/>

            <TextBox x:Name="TextBoxNote"
                     Text="{Binding Notes, Mode=TwoWay}"
                     PlaceholderText="Enter a note:"
                     Background="#1E1E1E"
                     Foreground="White"
                     BorderBrush="#7A00CC"
                     CornerRadius="10"
                     Padding="12"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Spacing="20"
                        Margin="0,24,0,0">

                <Button 
                        Click="GoToHomePage_Click"
                        Padding="12,6"
                        CornerRadius="10"
                        Foreground="White">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#AA88FF" Offset="0"/>
                            <GradientStop Color="#5555FF" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <SymbolIcon Symbol="Home"/>
                </Button>

                <Button Content="Add Workout"
                        Click="AddWorkoutAndNavigate_Click"
                        Command="{Binding AddWorkoutCommand}"
                        Padding="12,6"
                        CornerRadius="10"
                        Foreground="White">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#AA88FF" Offset="0"/>
                            <GradientStop Color="#5555FF" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>

            </StackPanel>
        </StackPanel>

    </Grid>
</Page>
