<Page
    x:Class="FitAppMVVM.Presentation.WorkoutDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FitAppMVVM.Presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Black">

    <ScrollViewer Padding="24">
        <StackPanel Spacing="24">

            <!-- Home Button -->
            <Button 
                Click="GoToHomePage_Click"
                Padding="12,6"
                CornerRadius="10"
                Foreground="White">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#AA88FF" Offset="0"/>
                        <GradientStop Color="#5555FF" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <SymbolIcon Symbol="Home"/>
            </Button>

            <!-- Workout Info -->
            <StackPanel Spacing="12"
                        HorizontalAlignment="Center"
                        Padding="10">
                <TextBlock Text="Name:"
                           FontWeight="Bold"
                           FontSize="18"
                           Foreground="#A26BFF"/>
                <TextBlock x:Name="TextBlockName"
                           FontSize="16"
                           Foreground="White"/>

                <TextBlock Text="Note:"
                           FontWeight="Bold"
                           FontSize="18"
                           Foreground="#A26BFF"
                           Margin="0,12,0,0"/>
                <TextBlock x:Name="TextBlockNote"
                           FontSize="16"
                           Foreground="White"/>

                <TextBlock x:Name="TextBlockId"
                           Visibility="Collapsed"/>
            </StackPanel>

            <!-- Exercises Header -->
            <TextBlock Text="Exercises:"
                       FontWeight="Bold"
                       FontSize="20"
                       Foreground="#A26BFF"
                       Margin="0,20,0,10"/>

            <!-- Exercises Table -->
            <Grid Background="#1E1E1E"
                  Padding="10"
                  CornerRadius="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Header Row -->
                <TextBlock Text="Name" FontWeight="Bold" Grid.Row="0" Grid.Column="0" Foreground="#D1A4FF" Padding="10" FontSize="20" HorizontalAlignment="Center"/>
                <TextBlock Text="Reps" FontWeight="Bold" Grid.Row="0" Grid.Column="1" Foreground="#D1A4FF" Padding="10" FontSize="20" HorizontalAlignment="Center"/>
                <TextBlock Text="Sets" FontWeight="Bold" Grid.Row="0" Grid.Column="2" Foreground="#D1A4FF" Padding="10" FontSize="20" HorizontalAlignment="Center"/>
                <TextBlock Text="Weight" FontWeight="Bold" Grid.Row="0" Grid.Column="3" Foreground="#D1A4FF" Padding="10" FontSize="20" HorizontalAlignment="Center"/>
                <TextBlock Text="" Grid.Row="0" Grid.Column="4"/>
                <TextBlock Text="" Grid.Row="0" Grid.Column="5"/>

                <!-- Dynamic List -->
                <ListView ItemsSource="{Binding Exercises}" Grid.Row="1" Grid.ColumnSpan="6">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding ExerciseName}" Grid.Column="0" Foreground="White" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding Reps}" Grid.Column="1" Foreground="White" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding Sets}" Grid.Column="2" Foreground="White" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding Weight}" Grid.Column="3" Foreground="White" HorizontalAlignment="Center" />

                                <Button Content="Delete"
                                        Click="DeleteExercise_Click"
                                        Grid.Column="4"
                                        Padding="6,2"
                                        Foreground="White"
                                        CornerRadius="6"
                                        HorizontalAlignment="Center">
                                    <Button.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#D1A4FF" Offset="0"/>
                                            <GradientStop Color="#7A00CC" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Button.Background>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <!-- Add Exercise Button -->
            <Button Content="Add an Exercise"
                    HorizontalAlignment="Left"
                    Padding="12,6"
                    CornerRadius="10"
                    Foreground="White"
                    Click="AddExercise_Click">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#AA88FF" Offset="0"/>
                        <GradientStop Color="#5555FF" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            
        </StackPanel>
    </ScrollViewer>
</Page>
