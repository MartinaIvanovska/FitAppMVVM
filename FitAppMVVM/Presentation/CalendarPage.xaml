<Page
    x:Class="FitAppMVVM.Presentation.CalendarPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FitAppMVVM.Presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Black">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Month Navigation -->
        <StackPanel Orientation="Horizontal"
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    Spacing="20"
                    Margin="0,10,0,10">
            <Button Click="PreviousMonth_Click"
                    
                    CornerRadius="22"
                    ToolTipService.ToolTip="Previous Month">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#AA88FF" Offset="0"/>
                        <GradientStop Color="#5555FF" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <SymbolIcon Symbol="Previous" Foreground="White" />
            </Button>

            <TextBlock Text="{Binding MonthYearLabel}"
                       VerticalAlignment="Center"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#A26BFF"/>

            <Button Click="NextMonth_Click"
                    
                    CornerRadius="22"
                    ToolTipService.ToolTip="Next Month">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#AA88FF" Offset="0"/>
                        <GradientStop Color="#5555FF" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <SymbolIcon Symbol="Next" Foreground="White" />
            </Button>
        </StackPanel>

        <!-- Calendar GridView -->
        <Grid Grid.Row="1">  
            <GridView MaxHeight="800"  
                      MaxWidth="1200"  
                      HorizontalAlignment="Center"  
                      VerticalAlignment="Center"  
                      ItemsSource="{Binding Days}"  
                      ItemContainerStyle="{StaticResource CalendarDayStyle}"  
                      IsItemClickEnabled="True"  
                      ItemClick="DayClicked"  
                      Margin="0,0,0,80">  
                <GridView.ItemTemplate>  
                    <DataTemplate>  
                        <Border Background="#1E1E1E" CornerRadius="12" Padding="10">  
                            <StackPanel Height="150" Width="150">  
                                <TextBlock Text="{Binding Date.Day}"  
                                           FontWeight="Bold"  
                                           FontSize="18"  
                                           Foreground="#A26BFF"  
                                           Margin="0,0,0,6"/>  

                                <ScrollViewer VerticalScrollBarVisibility="Auto"  
                                              Height="100"  
                                              IsHitTestVisible="False">  
                                    <ItemsControl ItemsSource="{Binding Workouts}">  
                                        <ItemsControl.ItemTemplate>  
                                            <DataTemplate>  
                                                <TextBlock Text="{Binding Name}"  
                                                           FontSize="14"  
                                                           Foreground="White"  
                                                           Margin="0,2,0,2"/>  
                                            </DataTemplate>  
                                        </ItemsControl.ItemTemplate>  
                                    </ItemsControl>  
                                </ScrollViewer>  
                            </StackPanel>  
                        </Border>  
                    </DataTemplate>  
                </GridView.ItemTemplate>  
            </GridView>  

            <!-- Home Button -->  
            
            <Button
                    Click="GoToHomePage_Click"
                    Height="55"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Center"
                    Margin="20">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#AA88FF" Offset="0"/>
                        <GradientStop Color="#5555FF" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <SymbolIcon Symbol="Home"/>
            </Button>
        </Grid>
       
    </Grid>
    
</Page>
